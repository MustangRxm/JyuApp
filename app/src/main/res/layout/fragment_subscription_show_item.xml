<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
              android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_subshow_item_channel_img"
    android:layout_alignParentRight="true"
    android:layout_width="60dp"
    android:layout_margin="10dp"
    android:layout_height="60dp"/>
    <TextView
        android:id="@+id/tv_subshow_item_channel_name"
        android:gravity="center_horizontal"
        android:layout_below="@id/iv_subshow_item_channel_img"
        android:layout_alignParentRight="true"
        android:text="选自"
        android:textSize="15sp"
        android:maxWidth="150dp"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_subshow_item_pubdate"
        android:layout_below="@id/iv_subshow_item_channel_img"
        android:layout_alignParentLeft="true"
        android:text="推送时间"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_subshow_item_title"
        android:text="标题"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:layout_alignParentLeft="true"
        android:layout_width="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
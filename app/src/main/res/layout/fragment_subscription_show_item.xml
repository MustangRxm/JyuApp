<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#ffffff"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_subshow_item_channel_img"
    android:layout_alignParentRight="true"
    android:layout_width="60dp"
    android:layout_margin="10dp"
    android:layout_height="60dp"/>
    <TextView
        android:id="@+id/tv_subshow_item_title"
        android:text="标题"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:layout_alignParentLeft="true"
        android:layout_width="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_subshow_item_pubdate"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_subshow_item_title"
        android:text="推送时间"
        android:textSize="13sp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/v_subshow_line"
        android:layout_below="@+id/tv_subshow_item_channel_name"
android:background="@drawable/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_below="@id/v_subshow_line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_subshow_share"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
   <ImageView
       android:id="@+id/iv_subshow_share"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:scaleX="0.5"
       android:scaleY="0.5"
       android:paddingLeft="10dp"
       android:layout_marginLeft="20dp"
       android:src="@mipmap/ic_share2"
       android:layout_height="match_parent"/>

        <TextView
        android:id="@+id/tv_subshow_share"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:gravity="left|center_vertical"
        android:text="分享"
        android:background="#ffffff"
        android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@drawable/divider_line"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/ll_subshow_collect"
        android:layout_marginLeft="1dp"
        android:clickable="true"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_subshow_collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_collect2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_subshow_collect"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:text="收藏"
            android:background="#ffffff"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@drawable/divider_line"
        android:layout_width="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/ll_subshow_good"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_subshow_good"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_good"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_subshow_good"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:text="点个赞"
            android:background="#ffffff"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_subshow_item_channel_name"
        android:gravity="center_horizontal"
        android:text="选自"
        android:textSize="15sp"
        android:layout_marginRight="5dp"
        android:maxWidth="150dp"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_subshow_item_channel_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
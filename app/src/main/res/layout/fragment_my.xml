<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.stu.app.jyuapp.Fragment.myFragment">

    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:text="@string/hello_blank_fragment"/>-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_user_info"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_user_info_headPortrait"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/tv_user_info_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_user_info_headPortrait"
                android:text="username"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_user_info_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_info_nickName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_user_info_headPortrait"
                android:text="userintroduction"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/ll_myFragment_Collect"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            app:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_myfragment_ic_collect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_collect"
                    />

                <ImageView
                    android:id="@+id/iv_myfragment_ic_comein_collect"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_comein"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/tv_myfragment_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_alignTop="@+id/iv_myfragment_ic_comein_collect"
                    android:layout_toRightOf="@+id/iv_myfragment_ic_collect"
                    android:layout_toEndOf="@+id/iv_myfragment_ic_collect"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/ll_myFragment_setting"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            app:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_myfragment_ic_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_setting"
                    />

                <ImageView
                    android:id="@+id/iv_myfragment_ic_comein_setting"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_comein"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/tv_myfragment_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_alignTop="@+id/iv_myfragment_ic_comein_setting"
                    android:layout_toRightOf="@+id/iv_myfragment_ic_setting"
                    android:layout_toEndOf="@+id/iv_myfragment_ic_setting"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/ll_myFragment_feedback"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            app:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_myfragment_ic_feedback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_feedback"
                    />

                <ImageView
                    android:id="@+id/iv_myfragment_ic_comein_feedback"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_comein"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/tv_myfragment_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_alignTop="@+id/iv_myfragment_ic_comein_feedback"
                    android:layout_toRightOf="@+id/iv_myfragment_ic_feedback"
                    android:layout_toEndOf="@+id/iv_myfragment_ic_feedback"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>

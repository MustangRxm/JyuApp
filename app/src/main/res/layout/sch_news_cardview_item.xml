<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/iv_sch_news_cardview_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        />

    <TextView
        android:id="@+id/tv_sch_news_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_sch_news_cardview_item"
        android:layout_toRightOf="@+id/iv_sch_news_cardview_item"

        android:text="from"/>

    <TextView
        android:id="@+id/tv_sch_news_title_cardview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_toRightOf="@+id/iv_sch_news_cardview_item"
        android:background="#ffffff"
        android:elegantTextHeight="true"

        android:maxWidth="260dp"
        android:text="title"
android:maxLength="2"
        android:textColor="#262525"
        android:textSize="16sp"
        android:transformPivotX="3dp"/>

